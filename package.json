{
    "name": "aladia-challenge",
    "version": "1.0.0",
    "description": "NestJS Monorepo Backend Challenge - Gateway and Authentication Microservices",
    "private": true,
    "workspaces": [
        "apps/*",
        "common",
        "config"
    ],
    "scripts": {
        "build:libs": "npx tsc -p config/tsconfig.json && npx tsc -p common/tsconfig.json",
        "format": "prettier --write \"apps/**/*.ts\" \"common/**/*.ts\" \"config/**/*.ts\"",
        "lint": "eslint \"apps/**/*.ts\" \"common/**/*.ts\" \"config/**/*.ts\" --fix",
        "start:gateway": "npm run build:libs && nest start gateway",
        "start:gateway:dev": "npm run build:libs && nest start gateway --watch",
        "start:authentication": "npm run build:libs && nest start authentication",
        "start:authentication:dev": "npm run build:libs && nest start authentication --watch"
    },
    "dependencies": {
        "@nestjs/common": "^10.3.0",
        "@nestjs/config": "^4.0.2",
        "@nestjs/core": "^10.3.0",
        "@nestjs/jwt": "^11.0.1",
        "@nestjs/microservices": "^10.3.0",
        "@nestjs/mongoose": "^10.0.2",
        "@nestjs/passport": "^11.0.5",
        "@nestjs/platform-express": "^10.3.0",
        "@nestjs/swagger": "^7.1.17",
        "bcrypt": "^6.0.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "mongoose": "^8.0.3",
        "nestjs-pino": "^4.4.1",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "pino-http": "^10.5.0",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@nestjs/cli": "^10.2.1",
        "@nestjs/schematics": "^10.0.3",
        "@nestjs/testing": "^10.3.0",
        "@types/bcrypt": "^6.0.0",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.11",
        "@types/node": "^20.10.6",
        "@types/passport-jwt": "^4.0.1",
        "@types/supertest": "^6.0.2",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.1.3",
        "globals": "^16.5.0",
        "jest": "^29.7.0",
        "pino-pretty": "^13.1.2",
        "prettier": "^3.1.1",
        "source-map-support": "^0.5.21",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.1",
        "ts-loader": "^9.5.1",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.46.4"
    }
}